<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeftNavFragments.AddFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meeting Particulars"
            android:layout_marginTop="50dp"
            android:id="@+id/et_meetingparticular">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Meeting Date"
            android:id="@+id/tv_date"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/et_meetingparticular"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Meeting Time"
            android:id="@+id/tv_time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_date"></TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_venue"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="5dp"></Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_uic"
            android:layout_below="@+id/spinner_venue"
            android:layout_marginTop="5dp"></Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attach Agenda"
            android:id="@+id/btn_agenda"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/spinner_uic"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attach Note"
            android:id="@+id/btn_note"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_agenda"></Button>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_note"
            android:layout_marginTop="20dp"
            android:text="Save"></Button>


    </RelativeLayout>
</FrameLayout>